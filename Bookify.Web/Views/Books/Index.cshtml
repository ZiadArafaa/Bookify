                    Add
                </a>
            </div>

        </div>
    </div>
</div>


<div class="card mt-2 p-sm-4">
    <div class="table-responsive text-nowrap">
        <table class="table" id="myTable">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Hall</th>
                    <th>Created On</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @* render row *@
            </tbody>
        </table>
    </div>
</div>

<input type="hidden" name="__RequestVerificationToken" value="@(_antiforgery.GetAndStoreTokens(Context).RequestToken)" />

@section PluginScripts {
    <partial name="_DataTablesJs" />
    <script src="~/js/books.js" asp-append-version="true"></script>
}
@section Scripts {
    <script src="~/lib/moment.js/moment.min.js"></script>
}