@model IEnumerable<RentalHistoryViewModel>
@{
    ViewBag.Title = "Rental Details";
}

<table class="table"  id="myTable">
    <thead>
        <tr>
            <th>Subscriper Name</th>
            <th>Subscriper Mobile</th>
            <th>Rental Date</th>
            <th>End Date</th>
            <th>TotalDelay (Days)</th>
            <th>Return Date</th>
            <th>Extend Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var rental in Model)
        {
            <tr>
                <td>@rental.SubscriperName</td>
                <td>@rental.SubscriperMobile</td>
                <td>@rental.RentalDate.ToString("dd, MMM yyyy")</td>
                <td>@rental.EndDate.ToString("dd, MMM yyyy")</td>
                <td class="@(!rental.TotalDelay.Equals(0)?"text-danger":"")">@rental.TotalDelay Day(s)</td>
                <td>@(rental.ReturnDate.HasValue ? rental.ReturnDate.Value.ToString("dd, MMM yyyy"):"")</td>
                <td>@(rental.ExtendedOn.HasValue ? rental.ExtendedOn.Value.ToString("dd, MMM yyyy") : "")</td>
            </tr>
        }
    </tbody>
</table>