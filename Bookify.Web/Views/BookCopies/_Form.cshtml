@model BookCopyFormViewModel
<form method="post" asp-action="@(!Model!.Id.Equals(0) ? "Edit":"Create")"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="OnModelBegin"
      data-ajax-success="OnModelSuccess(data)"
      data-ajax-failure="OnModelFailure"
      data-ajax-complete="OnModelComplete">

    <div class="form-floating mb-3 col-sm-4"> 
        <input type="text" value="@(Model.Id.Equals(0)?string.Empty:Model.EdittionNumber)" class="form-control" asp-for="EdittionNumber" placeholder="EdittionNumber" />
        <label asp-for="EdittionNumber">EdittionNumber</label>
        <span asp-validation-for="EdittionNumber" class="text-danger"></span>
    </div>

    @if(Model.BookIsRental)
    {
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" asp-for="IsAvailableForRental">
            <label class="form-check-label" asp-for="IsAvailableForRental"></label>
            <span asp-validation-for="IsAvailableForRental" class="text-danger"></span>
        </div>
    }

    <input type="hidden" asp-for="@Model.BookId" />

    @if(!Model!.Id.Equals(0))
    {
        <input type="hidden" asp-for="@Model.Id" />
    }


    <partial name="_ModalFooter" />
</form>