@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<div class="text-center">
    <div class="row p-0 m-0">
        <h1 class="p-0 m-0 text-gray">Locked Out</h1>
        <p class="text-gray m-0">Please wait and login...</p>
        <div class="text-center">
            <a class="p-0 m-0 btn btn-primary col-1 text-white" asp-page="./Login">Login</a>
        </div>
    </div>
    <div class="row p-0 m-0">
        <img src="~/assets/images/lockout.svg" alt="LouckOut" height="400px" />
    </div>
</div>
